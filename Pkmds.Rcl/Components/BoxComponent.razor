@if (BoxEdit is not null)
{
    <MudStack Row="@previewRow">
        <div class="column-1 box box-container">
            <MudText Typo="Typo.h5">
                @BoxEdit.BoxName
            </MudText>
            <BoxGrid BoxEdit="@BoxEdit" />
        </div>

        <MudExpansionPanels>
            @if (AppState is { SaveFile: not null, GameStrings: not null, SelectedPokemon.Species: > 0 })
            {
                <MudButton OnClick="@AppState.ClearSelection"
                           ButtonType="@ButtonType.Button"
                           Variant="@Variant.Filled"
                           Color="@Color.Primary">
                    Clear Selection
                </MudButton>

                <MudExpansionPanel Text="Pokémon Details">
                    <PokemonDetailsComponent />
                </MudExpansionPanel>
            }
        </MudExpansionPanels>

    </MudStack>
}
