@inherits BasePkmdsComponent

@if (AppState.SaveFile is not null)
{
    <div class="party-grid">
        <MudGrid Spacing="1"
                 Justify="@Justify.FlexStart">
            @for (var i = 0; i < 6; i++)
            {
                var slotNum = i;
                PKM? pkm = i < AppState.SaveFile.PartyCount ? AppState.SaveFile.PartyData[slotNum] : null;
                <MudItem xs="2">
                    <PokemonSlotComponent Pokemon="@pkm"
                                          SlotNumber="@slotNum"
                                          OnSlotClick="@(() => SetSelectedPokemon(pkm, slotNum))"
                                          GetStyleFunction="@(() => GetStyle(slotNum))" />
                </MudItem>
            }
        </MudGrid>
        <MudButton OnClick="@ExportAsShowdown"
                   ButtonType="@ButtonType.Button"
                   Variant="@Variant.Filled"
                   Class=""
                   Color="@Color.Primary">
            Export as Showdown
        </MudButton>
    </div>
}
