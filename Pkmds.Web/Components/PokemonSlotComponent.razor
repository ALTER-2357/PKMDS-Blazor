@inherits BasePkmdsComponent
@implements IDisposable

<MudPaper Elevation="3"
          @onclick="@HandleClick"
          Width="68px"
          Height="68px"
          Class="@SpriteHelper.GetSpriteCssClass(Pokemon)"
          Style="@GetStyle()">
    <object class="pkm-sprite"
            type="image/png"
            style="object-fit: contain;"
            data="@(Pokemon is { Species: > 0 } ? SpriteHelper.GetPokemonSpriteFilename(Pokemon) : null)"
            title="@(Pokemon is { Species: > 0 } ? AppService.GetPokemonSpeciesName(Pokemon.Species) : "Unknown")">
        <img class="pkm-sprite"
             src="@SpriteHelper.PokemonFallbackImageFileName"
             title="@(Pokemon is { Species: > 0 } ? AppService.GetPokemonSpeciesName(Pokemon.Species) : "Unknown")">
    </object>
</MudPaper>
