@if (AppState.SaveFile is not null)
{
    <MudGrid Spacing="1"
             Justify="@Justify.Center"
             Style="@(GridStyle)">
        <MudItem xs="12">
            <MudText Typo="Typo.h6"
                     Align="@Align.Center">
                Party
            </MudText>
        </MudItem>
        @for (var i = 0; i < 6 && i < AppState.SaveFile.PartyData.Count; i++)
        {
            var slotNum = i;
            var pkm = AppState.SaveFile.PartyData[slotNum];

            @if (pkm is not null)
            {
                <PartySlotComponent Pokemon="@pkm"
                                    SlotNumber="@slotNum" />
            }
        }
    </MudGrid>
}
