@GenderDisplayIcon(Gender)

@code{
    private static RenderFragment GenderText(string text, string? color) =>
    @<MudText Style="@($"color: {color}; ")">
        @text
    </MudText>;

    private RenderFragment GenderButton(Gender gender, string? icon, string? color) =>
    @<MudButton StartIcon="@icon"
                Variant="@Variant.Outlined"
                Style="@($"color: {color};")"
                OnClick="@OnClick"
                title="Click or tap to swap gender.">
        @GenderDisplayAscii(gender)
    </MudButton>;

    private static RenderFragment GenderIconOnly(string? icon, string? color) =>
    @<MudIcon Icon="@icon"
              Style="@($"color: {color};")" />;
}
