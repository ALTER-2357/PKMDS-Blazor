@using System.Web
@using System.Text.RegularExpressions

<MudDialog>
    <DialogContent>
        @((MarkupString)Regex.Replace(
            HttpUtility.HtmlEncode(ShowdownExport), "\r?\n|\r", "<br />"))
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Close"
                   Variant="@Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Clear">
            Close
        </MudButton>
    </DialogActions>
</MudDialog>
