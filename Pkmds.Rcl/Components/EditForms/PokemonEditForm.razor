@if (AppState.SaveFile?.Context is EntityContext saveFileEntityContext &&
saveFileEntityContext is not
EntityContext.None or
EntityContext.SplitInvalid or
EntityContext.MaxInvalid &&
AppState.SelectedPokemon is not null)
{
    <MudButton OnClick="@AppState.ClearSelection"
               ButtonType="@ButtonType.Button"
               Variant="@Variant.Filled"
               Class="my-2">
        Clear Selection
    </MudButton>

    <div class="mb-2">

        <MudTabs Outlined="true"
                 Rounded="true"
                 Border="true">

            <MudTabPanel Text="Main">
                <MainTab />
            </MudTabPanel>

            <MudTabPanel Text="Met">
                <MetTab />
            </MudTabPanel>

            <MudTabPanel Text="Stats">
                <StatsTab />
            </MudTabPanel>

            <MudTabPanel Text="Moves">
                <MovesTab />
            </MudTabPanel>

            <MudTabPanel Text="Cosmetic">
                <CosmeticTab />
            </MudTabPanel>

            <MudTabPanel Text="OT/Misc">
                <OtMiscTab />
            </MudTabPanel>

        </MudTabs>

    </div>
}
