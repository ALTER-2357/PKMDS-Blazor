<td class="@GetCssClass()"
    @onclick="SetPreviewPokemon">

    <div class="box-slot">
        @if (Pokemon is { Species: > 0 })
        {
            <MudPaper Elevation="3" Class="slot-fill">
                <span>
                    <PkmSprite Pokemon="@Pokemon" />
                </span>
            </MudPaper>
        }
        else
        {
            <MudPaper Outlined="true"
                      Width="68px"
                      Height="68px">
            </MudPaper>
        }
    </div>

</td>
