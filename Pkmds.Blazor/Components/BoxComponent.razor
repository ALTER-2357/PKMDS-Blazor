@if (BoxEdit is not null)
{
    @for (int rowNum = 0; rowNum < 5; rowNum++)
    {
        <div class="row">
            @for (int colNum = 0; colNum < 6; colNum++)
            {
                var pkm = BoxEdit[(rowNum * 6) + colNum];
                <div class="col">
                    <span>
                        @(pkm is { Species: > 0 }
                            ? PKHeX.Core.SpeciesName.GetSpeciesName(pkm.Species, (int)LanguageID.English)
                            : string.Empty)
                    </span>
                </div>
            }
        </div>
    }
}
