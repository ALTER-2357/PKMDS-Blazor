{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (Pkmds.Web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Pkmds.Web/bin/Debug/net9.0/Pkmds.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Pkmds.Web",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Attach to running .NET process",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Launch Chrome and debug Blazor WASM",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "https://localhost:5001",
      "webRoot": "${workspaceFolder}",
      "breakOnLoad": true
    }
  ]
}