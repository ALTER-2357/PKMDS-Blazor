@inherits LayoutComponentBase

<MudThemeProvider @ref="@mudThemeProvider"
                  @bind-IsDarkMode="@isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="@Color.Inherit"
                       Edge="@Edge.Start"
                       OnClick="@DrawerToggle" />
        PKMDS Save Editor
        <MudSpacer />
        <MudSwitch @bind-Checked="@isDarkMode"
                   Color="@Color.Primary"
                   Label="@(isDarkMode ? "Dark" : "Light")" />
    </MudAppBar>
    <MudDrawer @bind-Open="@drawerOpen">
        <MudDrawerHeader>
            <MudText Typo="@Typo.h6"
                     Color="@Color.Primary">
                PKMDS Save Editor
            </MudText>
        </MudDrawerHeader>
        <MudStack Spacing="3">
            <MudButton OnClick="@ShowLoadSaveFileDialogAsync"
                       Variant="@Variant.Filled"
                       FullWidth="@false"
                       Style="width: 80%; align-self: center;">
                Load Save File...
            </MudButton>
            <MudButton OnClick="@ExportSaveFileAsync"
                       Variant="@Variant.Filled"
                       FullWidth="@false"
                       Style="width: 80%; align-self: center;"
                       Disabled="@(AppState.SaveFile is null)">
                Export Save File...
            </MudButton>
            <MudButton OnClick="@ExportSelectedPokemonAsync"
                       Variant="@Variant.Filled"
                       FullWidth="@false"
                       Style="width: 80%; align-self: center;"
                       Disabled="@(AppState.EditFormPokemon is null)">
                Export Selected Pokémon...
            </MudButton>
        </MudStack>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="@MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
