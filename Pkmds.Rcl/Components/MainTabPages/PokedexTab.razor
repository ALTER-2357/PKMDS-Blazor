@inherits BasePkmdsComponent

@if (AppState.SaveFile is { HasPokeDex: true })
{
    <MudText>
        Seen: @GetSeenCount()
    </MudText>

    <MudText>
        Caught: @GetCaughtCount()
    </MudText>

    <MudButton OnClick="@FillPokedex"
               Variant="@Variant.Filled"
               Color="@Color.Primary"
               StartIcon="">
        Fill Pokédex
    </MudButton>
}
