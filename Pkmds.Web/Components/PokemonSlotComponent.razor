@inherits BasePkmdsComponent

<MudPaper Elevation="3"
          @onclick="@HandleClick"
          Width="68px"
          Height="68px"
          Class="@SpriteHelper.GetSpriteCssClass(Pokemon)"
          Style="@GetStyle()">
    @{ var title = Pokemon is { Species: > 0 }
               ? AppService.GetPokemonSpeciesName(Pokemon.Species)
               : "Unknown"; }
    <object class="pkm-sprite"
            type="image/png"
            style="object-fit: contain;"
            data="@(Pokemon is { Species: > 0 }
                      ? SpriteHelper.GetPokemonSpriteFilename(Pokemon)
                      : null)"
            title="@title">
        <img class="pkm-sprite"
             src="@SpriteHelper.PokemonFallbackImageFileName"
             title="@title"
             alt="@title">
    </object>
</MudPaper>
